extend includes/page

block link
  -var selected = 'Contacts';

block content
  .content
    .atk-wrapper.atk-padding-top.atk-padding-bottom
      .atk-cells-spacing--s.atk-margin-bottom--s
        .atk-cell.atk-text-nowrap
          h1 Contacts
        .atk-cell.atk-expand
          span.atk-text-size--xxl-nowrap.atk-comment 312
      .text-darkGray.atk-border-static.atk-margin-bottom.atk-cells-justified.atk-shape-rounded
        .atk-cell.atk-padding--s
          .atk-cells-spacing--s
            .atk-cell
              .atk-swatch-gray.atk-text-size--l-baseline--single.atk-padding--xs.atk-shape-circle
                span.icon-euro
            .atk-cell.atk-expand
              .atk-text-caps-size--xs Month to date
              .atk-text-semibold-size--l €16,850.00
        .atk-cell.atk-padding--s.atk-border-left-static
          .atk-cells-spacing--s
            .atk-cell
              .atk-swatch-gray.atk-text-size--l-baseline--single.atk-padding--xs.atk-shape-circle
                span.icon-euro
            .atk-cell.atk-expand
              .atk-text-caps-size--xs Year to date
              .atk-text-semibold-size--l €83,300.00
        .atk-cell.atk-padding--s.atk-border-left-static
          .atk-cells-spacing--s
            .atk-cell
              .atk-swatch-gray.atk-text-size--l-baseline--single.atk-padding--xs.atk-shape-circle
                span.icon-clock
            .atk-cell.atk-expand
              .atk-text-caps-size--xs Unpaid
              .atk-text-semibold-size--l €12,624.00
        .atk-cell.atk-padding--s.atk-border-left-static
          .atk-cells-spacing--s
            .atk-cell
              .atk-swatch-gray.atk-text-size--l-baseline--single.atk-padding--xs.atk-shape-circle
                span.icon-doc-inv
            .atk-cell.atk-expand
              .atk-text-caps-size--xs Invoices due
              .atk-text-semibold-size--l #[a(href='#') 3 invoices]
      .atk-cells.atk-margin-bottom
        .atk-cell.atk-expand
          a.atk-button.atk-swatch-mint(href='#') Add Contact
        .atk-cell.atk-align-right.atk-text-nowrap
          .atk-cells-spacing--s
            .atk-cell
              select(style="width:140px")
                option All (120)
                option Customers (80)
                option Contacts (40)
            .atk-cell
              .atk-inputIcon
                input(type="text" placeholder="Search Contacts..." style="width:200px")
                a.icon-search.atk-comment(href="#")
      .atk-box.atk-relative.atk-padding--none
        #actions-dropdown.popover-actions.atk-popover-top-right.atk-box.atk-hide
          .atk-popoverArrow
          ul.atk-lister-spacing--none.atk-list-nobullets
            li
              a.atk-swatch-default(href="javascript:void(0)") Some Action
            li
              a.atk-swatch-default(href="javascript:void(0)") Other Action
            li
              a.atk-swatch-default(href="javascript:void(0)") Edit
            li
              a.atk-swatch-default.atk-effect-danger(href="javascript:void(0)") Delete
        .atk-table-separated-hover-spacingSemi.atk-text-nowrap
          table
            thead
              tr
                th 
                  a.atk-comment(href="#") Name #[span.icon-down-dir]
                th #[a.atk-comment(href="#") Code]
                th #[a.atk-comment(href="#") Pending Invoices]
                th.atk-align-right #[a.atk-comment(href="#") Balance]
            tbody
              include includes/row-demo
              include includes/row-demo
              include includes/row-demo
              include includes/row-demo
              include includes/row-demo
              include includes/row-demo
              include includes/row-demo