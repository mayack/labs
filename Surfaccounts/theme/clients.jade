extend includes/page

block link
  -var selected = 'Contacts';

block content
  .atk-wrapper.atk-padding-top--l.atk-padding-bottom--l
    h1 Contacts #[span.atk-comment.atk-text-normal 312]
    .atk-border-static.atk-shape-rounded.atk-margin-bottom
      .atk-cells-justified.textGray-50
        .atk-cell.atk-padding-all--s
          .atk-cells-spacing--s
            .atk-cell
              .atk-swatch-stone.atk-text-baseline--single-size--l.atk-shape-circle.atk-padding-all--s
                span.icon-euro
            .atk-cell.atk-expand
              .atk-text-caps-size--xs Month to date
              .atk-text-semibold-size--l €16,850.00
        .atk-cell.atk-padding-all--s.atk-border-left-static
          .atk-cells-spacing--s
            .atk-cell
              .atk-swatch-stone.atk-text-baseline--single-size--l.atk-shape-circle.atk-padding-all--s
                span.icon-euro
            .atk-cell.atk-expand
              .atk-text-caps-size--xs Year to date
              .atk-text-semibold-size--l €83,300.00
        .atk-cell.atk-padding-all--s.atk-border-left-static
          .atk-cells-spacing--s
            .atk-cell
              .atk-swatch-stone.atk-text-baseline--single-size--l.atk-shape-circle.atk-padding-all--s
                span.icon-clock
            .atk-cell.atk-expand
              .atk-text-caps-size--xs Unpaid
              .atk-text-semibold-size--l €12,624.00
        .atk-cell.atk-padding-all--s.atk-border-left-static
          .atk-cells-spacing--s
            .atk-cell
              .atk-swatch-stone.atk-text-baseline--single-size--l.atk-shape-circle.atk-padding-all--s
                span.icon-doc-inv
            .atk-cell.atk-expand
              .atk-text-caps-size--xs Invoices due
              .atk-text-semibold-size--l #[a(href='#') 3 invoices]
    .atk-cells.atk-margin-bottom
      .atk-cell.atk-expand
        a.atk-button.atk-swatch-mint(href='#') Add Contact
      .atk-cell.atk-align-right.atk-text-nowrap
        .atk-cells-spacing--s
          .atk-cell
            select(style="width:140px")
              option All (120)
              option Customers (80)
              option Contacts (40)
          .atk-cell
            .atk-cells
              .atk-cell.atk-expand
                input.atk-shape-rounded--left(type="text" placeholder="Search Contacts..." style="width:200px")
              .atk-cell.atk-text-nowrap
                button.atk-block.atk-shape-rounded--right.atk-border-left--none.atk-button #[span.icon-search]
    .atk-box.atk-relative.atk-padding-all--none
      #actions-dropdown.atk-box.atk-hide.atk-padding-all--none
        .atk-popoverArrow
        ul.atk-lister-spacing--none.atk-list-nobullets.atk-text-nowrap
          li #[a.atk-block.atk-swatch-default.atk-padding-all--s.atk-padding-top--xs.atk-padding-bottom--xs.atk-shape-rounded--top(href='javascript:void(0)') Some Action]
          li #[a.atk-block.atk-swatch-default.atk-padding-all--s.atk-padding-top--xs.atk-padding-bottom--xs(href='javascript:void(0)') Other Action]
          li #[a.atk-block.atk-swatch-default.atk-padding-all--s.atk-padding-top--xs.atk-padding-bottom--xs(href='javascript:void(0)') Edit]
          li #[a.atk-block.atk-swatch-default.atk-padding-all--s.atk-padding-top--xs.atk-padding-bottom--xs.atk-shape-rounded--bottom.atk-effect-danger(href='javascript:void(0)') Delete]
      .atk-table-separated-hover-spacingSemi.atk-text-nowrap
        table
          thead.textGray-60
            tr
              th 
                a(href="#") Name #[span.icon-down-dir]
              th #[a(href="#") Code]
              th #[a(href="#") Pending Invoices]
              th.atk-align-right #[a(href="#") Balance]
          tbody
            include includes/row-demo
            include includes/row-demo
            include includes/row-demo
            include includes/row-demo
            include includes/row-demo
            include includes/row-demo
            include includes/row-demo