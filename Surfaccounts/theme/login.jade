html
  <!-<![endif]->
  include includes/head
  body
    .atk-layout
      .atk-layoutRow.atk-layoutExpand
        .atk-layout.atk-layoutCell
          main.atk-layoutColumn.atk-layoutExpand.atk-align-middle.atk-swatch-aqua
            .atk-wrapper
              .atk-margin-bottom.atk-align-center
                img(src="images/logo-white.svg" alt="Surfaccounts" width="160")
              .atk-row
                .atk-col-5.atk-move-center
                  .atk-box.atk-swatch-default.atk-shape-rounded-top.atk-border--none
                    h2.atk-margin-bottom--s Welcome back!
                    form
                      .atk-margin-bottom--xs
                        input.atk-expand(type='email', placeholder='Email address')
                      .atk-margin-bottom--xs
                        input.atk-expand(type='password', placeholder='Password')
                      .atk-cells.atk-margin-bottom--s
                        .atk-cell
                          input#checkbox(type='checkbox')
                          label.atk-margin-left--xs(for='checkbox') Remember me
                        .atk-cell.atk-align-right
                          a(href='#') Forgot password?
                      button.atk-button-spacing--xl.atk-expand.atk-text-caps.atk-swatch-mint Log In
                  .atk-box.atk-shape-rounded-bottom.atk-border--none.atk-border-top--static.atk-swatch-smoke.atk-padding--s.atk-align-center
                    .atk-comment
                      | Don't have an account?
                      a.atk-text-semibold.atk-margin-left--xs(href='#')
                        | Sign up
                        span.icon-angle-right